{# templates/admin/projects.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}GÃ©rer les Projets{% endblock %}

{% block body %}
    <h1>Liste des Projets</h1>

    <div class="container">
        <a href="{{ path('admin_project_create') }}" class="btn btn-primary mb-3">Ajouter un Projet</a>

        <table class="table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Screenshot</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for project in projects %}
                <tr>
                    <td>{{ project.id }}</td>
                    <td>{{ project.title }}</td>
                    <td>{{ project.description }}</td>
                    <td>{{ project.screenshot }}</td>
                    <td>
                        <a href="{{ path('admin_project_edit', {'id': project.id}) }}" class="btn btn-warning">Modifier</a>
                        <a href="{{ path('admin_project_delete', {'id': project.id}) }}" class="btn btn-danger">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
