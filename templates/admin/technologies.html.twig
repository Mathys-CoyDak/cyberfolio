{# templates/admin/technologies.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Liste des Technologies{% endblock %}

{% block body %}
    <h1>Liste des Technologies</h1>

    <div class="container">
        <a href="{{ path('admin_technology_create') }}" class="btn btn-primary">Créer une Nouvelle Technologie</a>

        <table class="table mt-3">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Version</th>
                <th>Logo</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for technology in technologies %}
                <tr>
                    <td>{{ technology.name }}</td>
                    <td>{{ technology.version }}</td>
                    <td>
                        <img src="{{ technology.logo }}" alt="Logo" width="100">
                    </td>
                    <td>
                        <a href="{{ path('admin_technology_edit', {'id': technology.id}) }}" class="btn btn-warning">Modifier</a>
                        <a href="{{ path('admin_technology_delete', {'id': technology.id}) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr ?');">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucune technologie trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
