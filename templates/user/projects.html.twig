{# templates/user/home.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Mes Projets{% endblock %}

{% block body %}
    <h1>Mes Projets</h1>

    <a href="{{ path('user_home') }}" class="btn btn-primary">Revenir à l'accueil</a>
    <a href="{{ path('user_project_create') }}" class="btn btn-success">Créer un projet</a>

    <ul>
        {% for project in projects %}
            <li>
                <h2>{{ project.title }}</h2>
                <p>{{ project.description }}</p>
                {% if project.screenshot %}
                    <img src="{{ asset(project.screenshot) }}" alt="{{ project.title }}" class="img-thumbnail">
                {% endif %}
                <p></p>
                <a href="{{ path('user_project_edit', { id: project.id }) }}" class="btn btn-warning">Modifier</a>
                <form action="{{ path('user_project_delete', { id: project.id }) }}" method="POST" onsubmit="return confirm('Êtes-vous sûr ?');">
                    <button type="submit" class="btn btn-danger">Supprimer</button>
                </form>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
